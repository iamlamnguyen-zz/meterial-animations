<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lamng.material_animations">

    <application
        android:name="com.example.lamng.material_animations.AnimApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.lamng.material_animations.features.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.lamng.material_animations.features.TransitionActivity" />
        <activity android:name="com.example.lamng.material_animations.features.ExplodeActivity" />
        <activity android:name="com.example.lamng.material_animations.features.SlideActivity" />
        <activity android:name="com.example.lamng.material_animations.features.SharedElementActivity"/>
    </application>

</manifest>